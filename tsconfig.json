{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023"],
		"module": "NodeNext",
		"skipLibCheck": true,

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,

		"types": ["vitest/globals"]
	}
}
